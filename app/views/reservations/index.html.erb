
<table>
<thead>
<tr>
<h2>予約済みルーム一覧</h2>
<th> ルーム画像</th>
<th> ルーム名</th>
<th> ルーム紹介</th>
<th> 合計料金</th>
<th> 開始日</th>
<th> 終了日</th>
<th> 予約確定日時</th>
</tr>
</thead>

<tbody>
<% @reservations.each do |reservation| %>
<% @rooms.each do |room| %>
<tr>
<td>
<% if room.image.attached? %>
        <%= image_tag room.image ,size: "300x250" %>
        <% end %></td>
<td><%= room.room_name %></td>
<td><%= room.introduction %></td>
<td><%= reservation.total_price %></td>
<td><%= reservation.start_date.to_s(:datetime_jp) %></td>
<td><%= reservation.end_date.to_s(:datetime_jp)  %></td>
<td><%= reservation.created_at.to_s(:datetime_jp) %></td>
</tr>
<% end %>
<% end %>
</tbody>
</table>
